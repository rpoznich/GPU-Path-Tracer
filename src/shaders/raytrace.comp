vec3 trace(vec3 origin, vec3 dir) {
  bool keepGoing = true;
  vec3 color = vec3(0.0, 0.0, 0.0);
  int depth = 10;
  float attenuate_factor = 1;
  bool lastState = false;

  while(depth > 0)
